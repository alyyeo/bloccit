<h1>New Ad</h1>

<div class="col-md-8">
    <%= form_for @ad do |a| %>
        <div class="form-group">
            <%= a.label :title %>
            <%= a.text_field :title, class: "form-control", placeholder: 'Enter ad title' %>
        </div>
        <div class="form-group">
            <%= a.label :copy %>
            <%= a.text_area :copy, rows: 3, class: "form-control", placeholder: "Enter ad copy" %>
        </div>
        <div class="form-group">
            <%= a.label "Price: $#{@ad.generate_price}" %>
            <%= a.text_field :copy, class: "form-control", placeholder: "Payment info and stuff" %>
        </div>
        <div class="form-group">
            <%= a.submit "Submit", class: 'btn btn-success' %>
        </div>
    <% end %>
</div